# Copy to actual-auto-backup.env and fill with your values.

# Required Actual connection details
ACTUAL_SERVER_URL=https://actual.example.com
ACTUAL_PASSWORD=
ACTUAL_SYNC_ID=
# Optional: back up multiple budgets (comma-separated). Each value must be
# `BudgetID:SyncID`. When set, it overrides ACTUAL_SYNC_ID.
# Example: BACKUP_SYNC_ID=budget-uuid-1:share-uuid-1,budget-uuid-2:share-uuid-1
BACKUP_SYNC_ID=
# Only set if your budget is encrypted
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Scheduler (default: Mondays at 00:00 UTC)
BACKUP_CRON=0 0 * * 1

# Local archive options
ENABLE_LOCAL=true
BACKUP_OUTPUT=/app/data/backups
# Keep the newest N archives
LOCAL_RETENTION_COUNT=4
# Keep one archive per ISO week for the last N weeks (unioned with the count rule)
LOCAL_RETENTION_WEEKS=0
TOKEN_STORE_PATH=/app/data/tokens

# Google Drive (service account) â€“ required fields when ENABLE_GDRIVE=true
ENABLE_GDRIVE=false
GDRIVE_SERVICE_ACCOUNT_JSON=/app/secrets/gdrive.json
GDRIVE_FOLDER_ID=
# Optional: switch to OAuth linking via the web UI
GDRIVE_MODE=service-account
GDRIVE_OAUTH_CLIENT_ID=
GDRIVE_OAUTH_CLIENT_SECRET=

# S3 / compatible providers (MinIO, Backblaze, etc.)
ENABLE_S3=false
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_PREFIX=actual-backups/
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=false

# Dropbox
ENABLE_DROPBOX=false
DROPBOX_ACCESS_TOKEN=
DROPBOX_BASE_PATH=/Actual-Backups
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=

# WebDAV / Nextcloud
ENABLE_WEBDAV=false
WEBDAV_URL=
WEBDAV_USERNAME=
WEBDAV_PASSWORD=
WEBDAV_BASE_PATH=/actual-backups

# Health / logging
LOG_LEVEL=info

# Web UI
HTTP_PORT=4010
BACKUP_PUBLIC_URL=http://localhost:4010
# Set when fronting the UI with actual-auto-auth / Traefik
AUTH_COOKIE_NAME=backup-auth
